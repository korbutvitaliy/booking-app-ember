{{#if isServiceProvider}}
    {{#link-to 'services.new' tagName="li"}}<a href>Add new service</a>{{/link-to}}
    <h1>All your services:</h1>
    <h2>Total number of your services: {{model.services.length}}</h2>
        <ul>
          {{#each model.services as |service|}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{service.name}}</h3>
                </div>
                <div class="panel-body">
                    <p>Description: {{service.description}}</p>
                    <p>Price: {{service.price}}</p>
                    <p>Price: {{service.startAt}}</p>
            <img src="{{service.image}}" alt="Smiley face" height="473" width="356">
                </div>
            </div>
          {{/each}}
        </ul>
{{/if}}
{{#if isConsumer}}
    <h1>All our services:</h1>
    <ul>
      {{#each model.services as |service|}}
        {{#unless service.booked}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{service.name}}</h3>
            </div>
            <div class="panel-body">
                <p>Description: {{service.description}}</p>
                <p>Price: {{service.price}}</p>
        <img src="{{service.image}}" alt="Smiley face" height="473" width="356">
            </div>
            {{#link-to 'services.show' service}}<a href>Book it!</a>{{/link-to}}
        </div>
        {{/unless}}
      {{/each}}
    </ul>
{{/if}}
