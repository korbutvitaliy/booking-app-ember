{{#if isServiceProvider}}
  {{#link-to 'services.new' tagName="li"}}<a href>Add new service</a>{{/link-to}}
  <h1>All your services:</h1>
  <h2>Total number of your services: {{filterViaUser.length}}</h2>
  <table>
    <tr>
      <th>Picture</th>
      <th>Service Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>From</th>
      <th>To</th>
      <th{{action "setSort"}}>Price</th>
    </tr>
    {{#each sortedList as |service|}}
      <tr>
        <td><img src="{{service.image}}" alt="Smiley face" height="150" width="150"></td>
        <td>{{service.name}}</td>
        <td>{{service.description}}</td>
        <td>{{format-date service.startAt format="ll"}}</td>
        <td>{{format-date service.startAt format="LT"}}</td>
        <td>{{format-date service.finishAt format="LT"}}</td>
        <td>{{service.price}}</td>
      </tr>
    {{/each}}
  </table>
{{/if}}
{{#if isConsumer}}
  <h1>All our services:</h1>
  <h3>You can filter services here</h3>
  <div class="form-group">
    <div class="col-sm-4" >
      <label class="col-sm-2 control-label">From date</label>
      {{pick-a-date date=(readonly date1) on-selected=(action (mut date1)) placeholder="Pick a date" options=(readonly extraPickadateOptions)}}
    </div>
    <div class="col-sm-4" >
      <label class="col-sm-2 control-label">To date</label>
      {{pick-a-date date=(readonly date2) on-selected=(action (mut date2)) placeholder="Pick a date" options=(readonly extraPickadateOptions)}} 
    </div>
    <button type="submit" class="btn btn-default" {{action "filter"}}>Filter</button>
    <button type="submit" class="btn btn-default" {{action "clear"}}>Clear</button>
  </div>
  <table>
    <tr>
      <th>Picture</th>
      <th>Service Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>From</th>
      <th>To</th>
      <th{{action "setSort"}}>Price</th>
      <th></th>
    </tr>
    {{#each sortedList as |service|}}
      {{#unless service.booked}}
        <tr>
          <td><img src="{{service.image}}" alt="Smiley face" height="150" width="150"></td>
          <td>{{service.name}}</td>
          <td>{{service.description}}</td>
          <td>{{format-date service.startAt format="ll"}}</td>
          <td>{{format-date service.startAt format="LT"}}</td>
          <td>{{format-date service.finishAt format="LT"}}</td>
          <td>{{service.price}}</td>
          <td>{{#link-to 'services.show' service.id}}<a href>Read more</a>{{/link-to}}</td>
        </tr>
      {{/unless}}
    {{/each}}
  </table>
{{/if}}
