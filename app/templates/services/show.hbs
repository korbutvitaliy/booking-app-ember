<div class="panel panel-default">
  <div class="panel-heading">
      <h3 class="panel-title">{{model.currentService.name}}</h3>
  </div>
  <div class="panel-body">
    <p>Description: {{model.currentService.description}}</p>
    <p>Price: {{model.currentService.price}}</p>
    <img src="{{model.currentService.image}}" alt="Smiley face" height="473" width="356">
  </div>
  <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.currentService.name class="form-control" placeholder="The name of the Service"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-10">
            {{input type="text" value=model.currentService.phone class="form-control" placeholder="The description of the Service"}}
        </div>
    </div>
    <div class="form-gorup">
        <label class="col-sm-2 control-label">Day</label>
        <div class="col-sm-10">
        {{pick-a-date date=(readonly date) on-selected=(action (mut date)) placeholder="Pick a date" options=(readonly extraPickadateOptions)}}
        </div>
    </div>
    <div class="form-gorup">
        <label class="col-sm-2 control-label">Time</label>
        <div class="col-sm-10">
        {{pick-a-time date=(readonly date1) value=model.currentService.workFrom placeholder="From" options=(readonly extraPickadateOptions)}}
        </div>
        <button type="submit" class="btn btn-success "   {{action 'saveService' model.currentService}}>Request a booking</button>
        <button type="submit" class="btn btn-default" {{action "cancel" model.currentService}}>Cancel</button>
    </div>
</div>

{{outlet}}