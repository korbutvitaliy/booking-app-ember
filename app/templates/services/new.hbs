<h1>Add a New Service</h1>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.name class="form-control" placeholder="The name of the Service"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            {{input type="text" value=model.description class="form-control" placeholder="The description of the Service"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Price</label>
        <div class="col-sm-10">
            {{input type="number" value=model.price class="form-control" placeholder="The price number of the Service"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
            {{input type="text" value=model.image class="form-control" placeholder="The inmage url of the Service"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveService' model}}>Add to Service list</button>
            <button type="submit" class="btn btn-default" {{action "cancel" model}}>Cancel</button>
        </div>
    </div>
</div>

{{#link-to 'services.index' tagName="li"}}<a href>List all services</a>{{/link-to}}