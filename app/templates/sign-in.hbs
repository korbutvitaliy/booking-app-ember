<div id="container" class="container">
  <div class='page-header'>
    <h1>Sign In</h1>
  </div>
  <div class='error'>
    <p>{{errorMessage}}</p>
  </div>

  {{input type='email' id='email' class='form-control' value=email placeholder='email'}}
  {{input type='password' class='form-control' value=password placeholder='password'}}

  <button
    class='btn btn-primary'
    {{action (perform authenticateWithPassword)}}
    disabled={{or authenticateWithPassword.isRunning (not isValid)}}
  >
    {{fa-icon 'sign-in'}} {{if authenticateWithPassword.isRunning "Signing in..." "Sign In"}}
  </button>
</div>
