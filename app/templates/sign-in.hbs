<div id="container" class="container">
	<div class='page-header'>
		<h1>Sign In</h1>
	</div>

	<div class='error'>
		<p>{{errorMessage}}</p>
	</div>

	

	<label>Email address</label>
	{{input type='text' class='form-control' value=email placeholder='email'}}
	<label>Password</label>
	{{input type='password' class='form-control' value=password placeholder='password'}}
	{{#if session.isWorking}}
		<button class='btn btn-default' disabled='disabled'>
			{{fa-icon 'spinner' spin=true}} Signing in...
		</button>
	{{else}}	


	<button class='btn btn-primary' {{action 'signIn' 'password'}}>

	{{fa-icon 'sign-in'}} Sign In

	</button>
	{{/if}}
	<br>
	<br>
	<br>
	<br>
	<br>


	<h4>Login with</h4>
	<button class="btn btn-social btn-lg btn-google" {{action "signUpWith" "google"}}> <span class="fa fa-google"></span> Google+</button>
	<button class="btn btn-social btn-lg btn-facebook disabled"> <span class="fa fa-facebook"></span> Facebook</button>
	<button class="btn btn-social btn-lg btn-twitter disabled"><span class="fa fa-twitter"></span> Twitter</button>
</div>