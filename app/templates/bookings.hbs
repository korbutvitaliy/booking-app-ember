{{#if isServiceProvider}}
  <h2>Pending requests: {{pending.length}}</h2>
  <table>
    <tr>
      <th>Service Name</th>
      <th>Name</th>
      <th>Accept</th>
      <th>Reject</th>
    </tr>
    {{#each pending as |booking|}}
      <tr>
        <td>{{booking.bookedService.name}}</td>
        <td>{{booking.whoBooked.name}}</td>
        <td><button type="submit" class="btn btn-success "   {{action 'accept' booking}}>Accept booking</button></td>
        <td><button type="submit" class="btn btn-danger" {{action 'reject' booking}}>Reject</button></td>
      </tr>
    {{/each}}
  </table>

  <h2>Accepted requests: {{accepted.length}}</h2>
  <table>
    <tr>  
      <th class="col-xs-1">Service Name</th>
      <th class="col-xs-1">Name</th>
      <th class="col-xs-2">Day</th>
      <th class="col-xs-2">Time</th>
      <th class="col-xs-2">Reject</th>
    </tr>
    {{#each accepted as |booking|}}
    <tr>
      <td >{{booking.bookedService.name}}</td>
      <td >{{booking.whoBooked.name}}</td>
      <td >{{format-date booking.startAt format="ll"}}</td>
      <td >{{format-date booking.startAt format="LT"}}</td>
      <td ><button type="submit" class="btn btn-sm btn-danger" {{action 'reject' booking}}>Reject</button></td>
    </tr>
    {{/each}}
  </table>
{{/if}}

