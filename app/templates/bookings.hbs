{{#if isServiceProvider}}
    <h2>Pending requests: {{pending.length}}</h2>
    {{#each pending as |booking|}}
        <div class="panel panel-default">
            <div class="panel-heading">
                    <h3 class="panel-title">{{booking.bookedService.name}}</h3>
            </div>
            <div class="panel-heading">
                    <h3 class="panel-title">{{booking.whoBooked.id}}</h3>
            </div>
            <div class="form-gorup">
                <button type="submit" class="btn btn-success "   {{action 'accept' booking}}>Accept booking</button>
                <button type="submit" class="btn btn-danger" {{action 'reject' booking}}>Reject</button>
            </div>
        </div>
    {{/each}}
    <h2>Accepted requests: {{accepted.length}}</h2>
    {{#each accepted as |booking|}}
        <div class="panel panel-default">
            <div class="panel-heading">
                    <h3 class="panel-title">{{booking.bookedService.name}}</h3>
            </div>
            <div class="panel-heading">
                    <h3 class="panel-title">{{booking.whoBooked.id}}</h3>
                    <button type="submit" class="btn btn-danger" {{action 'reject' booking}}>I changed my mind</button>

            </div>
        </div>
    {{/each}}
{{/if}}

